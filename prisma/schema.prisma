generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  mobile   String   @unique
  password String
  type     UserType @default(ADMIN)
}

enum UserType {
  ADMIN
  BUYER
}
